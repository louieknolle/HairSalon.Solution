@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4 class="stylistLink">Add new client to the roster</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.AppointmentDate)
  @Html.TextBoxFor(model => model.AppointmentDate, "{0:d MMM yyyy}", new { @class="input-large", type = "datetime-local" })

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new client and appointment" class="btn btn-default" />
}
<p class="bodyLink">@Html.ActionLink("Show all clients", "Index")</p>