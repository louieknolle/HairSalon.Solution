@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li class="stylistLink">@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<p class="bodyLink">@Html.ActionLink("Add new stylist", "Create")</p>
<p class="bodyLink">@Html.ActionLink("Home", "Index", "Home")</p>